<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#F1F1F1"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="4">

        <TextView
            android:id="@+id/confirmedHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:text="CONFIRMED"
            android:textColor="#99FF073A"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activeHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:text="ACTIVE"
            android:textColor="#99007BFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recoveredHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:text="RECOVERED"
            android:textColor="#9928A745"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/deceasedHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:text="DECEASED"
            android:textColor="#996C757D"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/headerLayout"
        android:background="#FFFFFF">

    </View>

    <LinearLayout
        android:id="@+id/infoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:background="#F1F1F1"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="4">

        <TextView
            android:id="@+id/confirmCase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:text="0"
            android:textColor="#99FF073A"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activeCase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:text="0"
            android:textColor="#99007BFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recoveredCase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:text="0"
            android:textColor="#9928A745"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/deceasedCase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:text="0"
            android:textColor="#996C757D"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/infoLayout"
        android:background="#FFFFFF">

    </View>

    <LinearLayout
        android:id="@+id/testedCountLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view2"
        android:background="#F1F1F1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/testCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:padding="6dp"
            android:textColor="#DE201AA2"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/testedCountLayout"
        android:background="#FFFFFF">

    </View>

    <LinearLayout
        android:id="@+id/updateTimeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view5"
        android:background="#F1F1F1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lastUpdatedime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:padding="6dp"
            android:textColor="#9928A745"
            android:textSize="15sp" />

    </LinearLayout>

<!--    <com.google.android.material.floatingactionbutton.FloatingActionButton-->
