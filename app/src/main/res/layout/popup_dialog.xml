<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header_container_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_header_confirmation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:padding="10dp"
            android:text="Connection Error!"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/img_cross_confirmation"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/cancel" />

    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@+id/header_container_confirmation"
        android:background="#3B7FF0">

    </View>

    <TextView
        android:gravity="center"
        android:id="@+id/tv_title_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_container_confirmation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/lato"
        android:text="@string/no_internet"
        android:textColor="#000000"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_confirmation"
        android:layout_marginTop="31dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.andexert.library.RippleView
            android:id="@+id/tv_cancel_ripple_confirmation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="10dp"
            app:rv_centered="false"
            app:rv_color="@android:color/white"
            app:rv_rippleDuration="100">

            <TextView
                android:id="@+id/tv_cancel_confirmation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_popup"
                android:clickable="false"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingTop="7dp"
                android:paddingRight="30dp"
                android:paddingBottom="7dp"
                android:text="Cancel"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/tv_save_ripple_confirmation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            app:rv_centered="false"
            app:rv_color="@android:color/white"
            app:rv_rippleDuration="100">

            <TextView
                android:id="@+id/tv_save_confirmation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_popup"
                android:clickable="false"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingTop="7dp"
                android:paddingRight="30dp"
                android:paddingBottom="7dp"
                android:text="Open Settings"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </com.andexert.library.RippleView>

    </LinearLayout>

</RelativeLayout>